<h1><%= @type %>'s Directory</h1>
<ul>
	<% @users.each do |user| %>
		<li>
			<p>
				<%= user.name %>&nbsp;|&nbsp;
				<%= user.email %> |
				<%= user.type %> |
				<%= link_to 'Show',  sti_user_path(user.type, user) %>
				<%= link_to 'Edit', user_path(user), method: 'patch' %>
				<%= link_to 'Destroy', user_path(user), method: 'delete', data: {confirm: 'Are you sure?'} %>
			</p>
			<p><%= user.bio %></p>
		</li>
	<% end %>
</ul>

<br>
