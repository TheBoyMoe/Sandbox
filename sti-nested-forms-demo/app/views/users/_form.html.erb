<%= form_for(user) do |f| %>
	<% if user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(user.errors.count, "error") %> prohibited this animal from being saved:</h2>

			<ul>
				<% user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</div><br>

	<div class="field">
		<%= f.label :type %><br>
		<%= f.select :type, User.types.map {|r| [r.humanize, r.camelcase]}, {}, disabled: type != "User" %>
		<% if type != "User" %>
			<%= f.hidden_field :type, value: type %>
		<% end %>
	</div><br>

	<div class="field">
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</div><br>

	<div class="field">
		<%= f.label :bio %><br>
		<%= f.text_area :bio %>
	</div><br>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>