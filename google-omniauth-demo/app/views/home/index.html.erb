<% if current_user %>
	<h1>Hi <%= "#{current_user.first_name} #{current_user.last_name}" %></h1>

	<div class="col-xs-6 col-sm-6 col-md-6 logout-btn">
		<%= link_to "Logout", logout_path, class: "btn btn-success btn-m" %>
	</div>
<% else %>
	<h1>Welcome</h1>
	<div class="col-xs-6 col-sm-6 col-md-6 signin-btn">
		<%= link_to "Sign in with Github", '/auth/google', class: "btn btn-social btn-github btn-m" %>
	</div>
	<div class="col-xs-6 col-sm-6 col-md-6 signin-btn">
		<%= link_to "Sign in with Google", "/auth/google", class: "btn btn-social btn-gplus btn-primary btn-m" %>
	</div>
<% end %>

